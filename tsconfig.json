{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "resolveJsonModule": true,  // Add this line
      "strictPropertyInitialization": false,
      "outDir": "./dist",
      "strict": true,
      "target": "es6",
      "baseUrl": "./",
      "paths": {
        "*": ["src/*", "db/*"]
      }
    },
    "include": [
      "src/**/*",
      "db/**/*"
    ]
  }
  